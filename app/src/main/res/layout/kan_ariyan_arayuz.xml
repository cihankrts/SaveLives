<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="20dp"
    android:padding="10dp"
    android:background="#F0F0F0"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İsim"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/txtBloodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Type"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/txtName"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/txtOnayDurumu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onay"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/txtName"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/txtOnay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onay Durumu:"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/txtName"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/txtIlce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İlçe"
            android:layout_marginRight="200dp"
            android:layout_below="@id/txtOnay"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender"
            android:layout_marginRight="80dp"
            android:layout_below="@id/txtOnay"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/txtSehir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şehir"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/txtBloodType"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark"/>

        <Button
            android:id="@+id/btnMainSendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="mesaj gönder" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>