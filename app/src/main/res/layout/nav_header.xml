<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/blood"
    tools:context=".KanAriyanlar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAYAT VER"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingConstraints,MissingPrefix">
        <TextView
            android:id="@+id/txtDonorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donor ismi"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDonorCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donor şehri"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   /   "
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/txtDonorDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor ilçesi"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtDonorPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donor telefonu"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>